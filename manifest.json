{
  "manifest_version": 3,
  "name": "DecodeLingo sight",
  "version": "0.1.0",
  "description": "特定の文字列を置き換えるだけの「ジョーク」ブラウザ拡張機能",
  "permissions": [],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/entry/content.js"]
    }
  ],
  "options_ui": {
    "page": "res/html/preferences.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["package.json", "src/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
